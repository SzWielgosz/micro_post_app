{% embed 'shared/_tabs.html.twig' %}
    {% block tabs %}
        {% embed 'shared/_tab.html.twig' with { route: 'app_micro_post' } %}
            {% block content %}
                All posts
            {% endblock %}
            {% block path %}
            {{ path('app_micro_post')}}
            {% endblock %}
        {% endembed %}

        {% embed 'shared/_tab.html.twig' with { route: 'app_micro_post_top_liked', classes: 'ml-2' } %}
            {% block content %}
                Top Liked
            {% endblock %}
            {% block path %}
            {{ path('app_micro_post_top_liked') }}
            {% endblock %}
        {% endembed %}
        {% if app.user %}
            {% embed 'shared/_tab.html.twig' with { route: 'app_micro_post_followed', classes: 'ml-2' } %}
                {% block content %}
                    Follows posts
                {% endblock %}
                {% block path %}
                {{ path('app_micro_post_followed') }}
                {% endblock %}
            {% endembed %}
        {% endif %}
    {% endblock %}
{% endembed %}