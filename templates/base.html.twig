<!DOCTYPE html>
<html>
    <head class="">
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            <script src="https://cdn.tailwindcss.com"></script>
            <script>
                tailwind.config = {
                    darkMode: 'class'
                }
            </script>
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class="bg-gray-100 text-gray-800 m-10 dark:bg-gray-800 dark:text-white">
        <div class="w-full md:w-2/3 mx-auto flex justify-between">
            <div class="text-4xl mt-4">
                <a href="{{ path('app_micro_post') }}">Home</a>
                {% block bread %}{% endblock %} {# **This block will be filled with breadcrumbs from other templates for example add.html.twig will add it's block here** #}
            </div>
            <div class="text-right">
                <div class="text-sm text-gray-400 dark:text-gray-500 flex flex-row gap-2 items-center mt-4">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <div class="mt-3"><a href="{{ path('app_micro_post_add') }}">Add a new Post</a></div>
                    <div class="mt-3"><a href="{{ path('app_settings_profile') }}">Profile Settings</a></div>
                    <div class="flex flex-col items-center">
                        <a href="{{ path('app_user_profile', {id:app.user.id}) }}">{{ include('shared/_avatar.html.twig', {size: 8, profile: app.user.userProfile}) }}</a>
                        <div><p>{{ app.user.email }}</p></div>
                        <div><a href="{{ path('app_logout') }}">Logout</a></div>
                    </div>
                {% else %}
                    <div><a href="{{ path('app_login') }}">Login</a></div>
                    <div><a href="{{ path('app_register') }}">Register</a></div>
                {% endif %}
                </div>
            </div>
        </div>

        <div class="w-full md:w-2/3 mx-auto">
            {% for message in app.flashes('success') %} {# **Adding flash messages to an app. It appears one time and dissapears in the next redirect #}
                <div class="rounded-md p-2 border-green-300 bg-green-50 border dark:border-green-600 dark:bg-green-700 dark:text-white mb-4">{{ message }}</div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="rounded-md p-2 border-red-300 bg-red-50 border dark:border-red-600 dark:bg-red-700 dark:text-white mb-4">{{ message }}</div>
            {% endfor %}
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
